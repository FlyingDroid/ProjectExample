<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_weight="10"
    android:orientation="vertical">

    <WebView
        android:id="@+id/webView_detail"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/divider_line"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/widget_pad">

        <Button
            android:id="@+id/btn_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/abc_ic_search"
            android:text="转发" />

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_edit_dark"
            android:text="评论" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_margin"
            android:drawableLeft="@drawable/abc_ic_menu_share_holo_dark"
            android:text="分享" />
    </LinearLayout>
</LinearLayout>