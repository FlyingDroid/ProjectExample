<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_weight="10"
    android:orientation="vertical"
    tools:context="com.weidukeji.agriculture.fragment.PublishFragment">

    <EditText
        android:id="@+id/et_publish"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="top|left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/divider_line"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/widget_pad">


        <Button
            android:id="@+id/btn_pics"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/selector_camera" />

        <Button
            android:id="@+id/btn_camera"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/widget_margin"
            android:background="@drawable/selector_open_pic" />
    </LinearLayout>
</LinearLayout>