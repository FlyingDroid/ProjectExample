<resources>

    <style name="AppCompatTheme" parent="AppCompatToolBar.Base" />

    <style name="AppCompatToolBar.Base" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="Theme.Start" parent="android:Theme">
        <item name="android:windowBackground">@color/gray_white_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_bottom_bar_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <!--floating action button-->
    <style name="FloatingActionButton" parent="android:Widget.ImageButton">
        <item name="floatingActionButtonSize">normal</item>
    </style>

    <style name="FloatingActionButton.Mini" parent="FloatingActionButton">
        <item name="floatingActionButtonSize">mini</item>
    </style>

    <style name="FloatingActionButton.Light" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@android:color/primary_text_dark</item>
    </style>

    <style name="FloatingActionButton.Light.Mini" parent="FloatingActionButton.Mini">
        <item name="floatingActionButtonColor">@android:color/primary_text_dark</item>
    </style>

    <style name="FloatingActionButton.Dark" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@android:color/tab_indicator_text</item>
    </style>

    <style name="FloatingActionButton.Dark.Mini" parent="FloatingActionButton.Mini">
        <item name="floatingActionButtonColor">@android:color/tab_indicator_text</item>
    </style>

    <style name="AppTheme.Light" parent="AppCompatTheme">
        <item name="icActionEdit">@drawable/ic_action_edit_light</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.Fab.Light</item>
    </style>

    <style name="AppTheme.Dark" parent="android:Theme">
        <item name="icActionEdit">@drawable/ic_action_edit_dark</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.Fab.Light</item>
    </style>

    <style name="AppTheme.Fab.Light" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@color/fab_light</item>
    </style>

    <style name="AppTheme.Fab.Dark" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@color/fab_dark</item>
    </style>

    <!--tab indicator style-->
    <style name="Theme.PageIndicatorDefaults" parent="AppTheme.Light">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>

    <style name="Widget" />

    <style name="Widget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/news__tab_indicator</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textColor">@color/news_tab_theme</item>
    </style>

    <style name="Widget.IconPageIndicator" parent="Widget">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wrap_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_font</item>
        <item name="android:gravity">center</item>
    </style>
    <!--下拉刷新-->
    <style name="drop_down_list_header_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_header_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_header_progress_bar_height</item>
    </style>

    <style name="drop_down_list_footer_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_footer_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_footer_progress_bar_height</item>
    </style>

    <style name="drop_down_list_header_font_style">
        <item name="android:textColor">@color/drop_down_list_header_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="drop_down_list_header_second_font_style">
        <item name="android:textColor">@color/drop_down_list_header_second_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="drop_down_list_footer_font_style">
        <item name="android:textColor">@color/drop_down_list_footer_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="btn_tool_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
    </style>
</resources>
